{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: cl.exe build NavigatorX",
            "command": "cl.exe",
            "args": [
                "/std:c++17",
                "/EHsc",
                "/Zc:__cplusplus",
                "/Zi",
                "/nologo",
                "/I",
                "include",
                "src\\*.cpp",
                "/Fo${workspaceFolder}\\build\\",
                "/Fe${workspaceFolder}\\NavigatorX.exe"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$msCompile"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Build NavigatorX from src/ using cl.exe"
        },
        {
            "label": "Build Google Tests",
            "type": "cppbuild",
            "command": "cl.exe",
            "args": [
                "/std:c++17",
                "/EHsc",
                "/Iexternal\\googletest\\include",
                "/Iexternal\\googletest",
                "/Iexternal\\googlemock\\include",
                "/Iexternal\\googlemock",
                "/Iinclude",
                "/Fe:WindowsFileSystemTests.exe",
                "tests\\WindowsFileSystemTests.cpp",
                "external\\googletest\\src\\gtest_main.cc",
                "external\\googletest\\src\\gtest-all.cc",
                "external\\googlemock\\src\\gmock-all.cc",
                "src\\WindowsFileSystem.cpp",
                "/link",
                "/out:${workspaceFolder}\\WindowsFileSystemTests.exe"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$msCompile"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Build Google Tests for WindowsFileSystem using cl.exe"
        }
    ]
}